<h1>Editing user</h1>

<%= form_for(@user) do |f|	%>
	<%=	render	'shared/error_messages',	:object	=>	f.object	%>
	<div class="field">
		<%=	f.label	"First Name"	%><br	/>
		<%=	f.text_field	:f_name	%>
	</div>
	<div class="field">
		<%=	f.label	"Last Name"	%><br	/>
		<%=	f.text_field	:l_name	%>
	</div>
	<div class="field">
		<%=	f.label	"Email"	%><br	/>
		<%=	f.text_field	:email	%>
	</div>
	<div class="field">
		<%=	f.label	:password	%><br	/>
		<%=	f.text_field	:password	%>
	</div>
	<div class="field">
		<%=	f.label	:password_confirmation,	"Confirmation"	%><br	/>
		<%=	f.text_field	:password_confirmation	%>
	</div>
	<div class="actions">
		<%=	f.submit	"Update"	%>
	</div>
<%	end %>

<div>
	<%=	gravatar_for @user	%>
	<a href="http://gravatar.com/emails">change</a>
</div>